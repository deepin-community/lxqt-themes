/* Menu */

QMenu
{
	border:			1px solid #909090;
	background:		#edeceb;
	padding:		1px;
}

QMenu::item
{
	border:			1px solid transparent;
	border-radius:		3px;

	padding-left:		8px;
	padding-right:		6px;
	padding-top:		2px;
	padding-bottom:		2px;
}

QMenu::item:selected
{
	border:			1px solid #5070a0;
	border-radius:		3px;
	background-color:	qlineargradient(x1:0, y1:0, x2:0, y2:0, stop:0 #a0c0e0, stop:1 #80a0d0);
	color:			#ffffff;


	margin-left:		0px;
}
